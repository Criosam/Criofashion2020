<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:background="@color/colorPrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="3500dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <include
        android:id="@+id/homeAppBar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/app_bar_layout"/>



    <RelativeLayout
        android:layout_below="@+id/homeAppBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/crioFamily">

        <ImageView
            android:id="@+id/crio"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/crio_family" />

    </RelativeLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/crioFamily"
                android:text="Just Lunched"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/futurapt_font"
                android:id="@+id/justLunched"
                />
<!-- just lunch er porere ta-->
            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="240dp"
                android:layout_below="@id/justLunched"
                app:cardBackgroundColor="@color/colorTransparent"
                android:id="@+id/justLuncedCardView"
                app:cardElevation="0dp"
                android:layout_marginLeft="15dp"
                android:layout_alignParentLeft="true">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/item_background">


                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/shirtfront"
                        android:id="@+id/newTshirt"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/newTshirt"
                        android:layout_marginTop="-50dp"
                        android:layout_centerHorizontal="true"
                        android:text="Fashion Shirt"
                        android:fontFamily="@font/futurapt_font"
                        android:textColor="#424242"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="240dp"
                android:layout_below="@id/justLunched"
                app:cardBackgroundColor="@color/colorTransparent"
                app:cardElevation="0dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:id="@+id/justLuncedCardView2"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/item_background">


                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/kids_image"
                        android:id="@+id/newLeggings"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/newLeggings"
                        android:layout_marginTop="-50dp"
                        android:layout_centerHorizontal="true"
                        android:text="Legginse"
                        android:fontFamily="@font/futurapt_font"
                        android:textColor="#424242"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

<!-- 2nd row -->
            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="240dp"
                android:layout_below="@id/justLuncedCardView"
                app:cardBackgroundColor="@color/colorTransparent"
                android:id="@+id/justLuncedCardView3"
                app:cardElevation="0dp"
                android:layout_marginLeft="15dp"
                android:layout_alignParentLeft="true">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/item_background">


                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/kids2"
                        android:id="@+id/newTshirt1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/newTshirt1"
                        android:layout_marginTop="-10dp"
                        android:layout_centerHorizontal="true"
                        android:text="Skirts"
                        android:fontFamily="@font/futurapt_font"
                        android:textColor="#424242"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="240dp"
                android:layout_below="@id/justLuncedCardView2"
                app:cardBackgroundColor="@color/colorTransparent"
                app:cardElevation="0dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:id="@+id/justLuncedCardView4"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/item_background">


                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/red_shirt"
                        android:id="@+id/newLeggings1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/newLeggings1"
                        android:layout_marginTop="-50dp"
                        android:layout_centerHorizontal="true"
                        android:text="Fashion Tshirt"
                        android:fontFamily="@font/futurapt_font"
                        android:textColor="#424242"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/justLuncedCardView3"
                android:text="Now Trending"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/futurapt_font"
                android:id="@+id/nowTrending"
                />
            <!-- round item 1-->
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_below="@id/nowTrending"
                app:cardBackgroundColor="@color/colorTransparent"
                app:cardElevation="0dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/nowTrendingCardView"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/round_button_convex_big_foreground">


                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/kids_image"
                        android:id="@+id/newLeggingsTrending"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/newLeggingsTrending"
                        android:layout_marginTop="-70dp"
                        android:layout_centerHorizontal="true"
                        android:text="Leggins for kids"
                        android:fontFamily="@font/futurapt_font"
                        android:textColor="#424242"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


<!-- round item 2-->
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/nowTrendingCardView"
                app:cardBackgroundColor="@color/colorTransparent"
                app:cardElevation="0dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/nowTrendingCardView1"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/round_button_convex_big_foreground">


                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/shirtfront"
                        android:id="@+id/newTshirtTrending"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/newTshirtTrending"
                        android:layout_marginTop="-70dp"
                        android:layout_centerHorizontal="true"
                        android:text="Tshirts"
                        android:fontFamily="@font/futurapt_font"
                        android:textColor="#424242"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/whyChooseUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nowTrendingCardView1"
                android:text="Why Choose Use?"
                android:layout_centerHorizontal="true"
                android:textSize="30sp"
                android:fontFamily="@font/futurapt_font"
                android:textStyle="bold"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="5"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimary"
                />
            <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nowTrendingCardView1"
            android:text="Why Choose Use?"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:fontFamily="@font/futurapt_font"
            android:textStyle="bold"
            android:shadowColor="@color/colorAccent"
            android:shadowDx="-3"
            android:shadowDy="-3"
            android:shadowRadius="5"
                android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimary"
            />
            <!--be indian-->

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_below="@id/whyChooseUs"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/cardLestsIndian"

                app:cardBackgroundColor="@color/colorTransparent"
                app:cardElevation="0dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/button_convex_big_square_foreground">


                    <TextView
                    android:id="@+id/letsBeIndian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/futurapt_font"
                    android:text="Let's be Indian"
                    android:textSize="25dp"
                    android:layout_marginTop="80dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/letsBeIndian"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/futurapt_font"
                        android:text="100% Indian Product \n 100% designed in India \n 100% Indian manufactured"
                        android:textAlignment="center"
                        android:textSize="15dp" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--build trust-->
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_below="@id/cardLestsIndian"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/cardBuildTrust"
                android:layout_marginTop="-40dp"
                app:cardBackgroundColor="@color/colorTransparent"
                app:cardElevation="0dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/button_convex_big_square_foreground">


                    <TextView
                        android:id="@+id/letsBuildTrust"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/futurapt_font"
                        android:text="Let's Bulid Trust"
                        android:textSize="25dp"
                        android:layout_marginTop="80dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/letsBuildTrust"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/futurapt_font"
                        android:text="All products are verified \n COD always available \n 1 week return accepted"
                        android:textAlignment="center"
                        android:textSize="15dp" />


                </RelativeLayout>




            </androidx.cardview.widget.CardView>



<!--buy good-->

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_below="@id/cardBuildTrust"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/cardBuyGood"
                android:layout_marginTop="-40dp"
                app:cardBackgroundColor="@color/colorTransparent"
                app:cardElevation="0dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/button_convex_big_square_foreground">


                    <TextView
                        android:id="@+id/letsBuyGood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/futurapt_font"
                        android:text="Let's Buy Good"
                        android:textSize="25dp"
                        android:layout_marginTop="80dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/letsBuyGood"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/futurapt_font"
                        android:text="Only highest quality \n In lowest Price \n Happiness delivered!"
                        android:textAlignment="center"
                        android:textSize="15dp" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- our products-->

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_below="@id/cardBuyGood"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/ourProductsCard"
                android:layout_marginTop="-40dp"
                app:cardBackgroundColor="@color/colorTransparent"
                app:cardElevation="0dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/button_convex_big_square_foreground">


                    <TextView
                        android:id="@+id/ourProducts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/futurapt_font"
                        android:shadowColor="@color/colorPrimaryDark"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="5"
                        android:text="Products"
                        android:textColor="@color/colorPrimary"
                        android:textSize="35dp" />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/futurapt_font"
                        android:shadowColor="@color/colorAccent"
                        android:shadowDx="-3"
                        android:shadowDy="-3"
                        android:shadowRadius="5"
                        android:text="Products"
                        android:textColor="@color/colorPrimary"
                        android:textSize="35dp" />


                    <Button
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textSize="10dp"
                    android:text="Shirts"
                    android:textAllCaps="false"
                        android:layout_marginLeft="30dp"
                    android:fontFamily="@font/futurapt_font"
                    android:layout_above="@+id/ourProducts"
                    android:background="@drawable/button_cave"
                        android:layout_marginBottom="15dp"
                    />

                    <Button
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:textSize="10dp"
                        android:text="Leggings"
                        android:textAllCaps="false"
                        android:fontFamily="@font/futurapt_font"
                        android:layout_above="@+id/ourProducts"
                        android:background="@drawable/button_cave"
                        android:layout_marginBottom="15dp"
                        />
                    <Button
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:textSize="10dp"
                        android:text="Frames"
                        android:textAllCaps="false"
                        android:layout_marginLeft="30dp"
                        android:fontFamily="@font/futurapt_font"
                        android:layout_below="@+id/ourProducts"
                        android:background="@drawable/button_cave"
                        android:layout_marginTop="15dp"
                        />
                    <Button
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:textSize="10dp"
                        android:text="Gifts"
                        android:textAllCaps="false"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:fontFamily="@font/futurapt_font"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/ourProducts"
                        android:background="@drawable/button_cave"
                        />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>




