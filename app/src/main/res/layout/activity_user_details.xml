<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDetailsActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Details"
        android:textSize="40dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/addDetails"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/futurapt_font"
        />

    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Name"

        android:padding="15dp"
        android:id="@+id/userName"
        android:layout_below="@id/addDetails"/>

    <com.lamudi.phonefield.PhoneEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userName"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/userPhoneNumber"
        android:backgroundTint="@color/colorPrimary"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@id/userPhoneNumber"
        android:layout_centerHorizontal="true"
        android:id="@+id/addButtonClicked"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/futurapt_font"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_convex"
        android:text="NeXt"/>

</RelativeLayout>